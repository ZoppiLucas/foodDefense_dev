@model IEnumerable<FoodDefence.Models.TRAMPA_TIPO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="callout callout-primary">
    <h4><i class="fa fa-bug"></i> Tipos de Trampa</h4>
    <br />

    <div>
        <table class="table table-bordered table-sm">
            <tr>
                <th>
                    Descripción
                </th>
                <th>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", "TRAMPA_TIPO", new { id = item.id }, new { @class = "btn btn-outline-dark" })
                        @Html.ActionLink("Eliminar", "Delete", "TRAMPA_TIPO", new { id = item.id }, new { @class = "btn btn-outline-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>

</div>