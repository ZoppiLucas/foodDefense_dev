@model FoodDefence.Models.CLIENTE_LOCACION

@{
    ViewBag.Title = "Reactivar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="callout callout-primary">
    <h4><i class="fa fa-undo"></i> ¿Esta seguro que desea reactivar esta locación?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Cliente
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CLIENTE.razonSocial)
        </dd>
        <dt>
            Locación
        </dt>
        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>
        <dt>
            Provincia
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PROVINCIA.descripcion)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2>&emsp;</h2>
        <div class="form-actions no-color">
            <input type="submit" value="Reactivar" class="btn btn-outline-success" />
            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-outline-primary" })
        </div>
    }
</div>

