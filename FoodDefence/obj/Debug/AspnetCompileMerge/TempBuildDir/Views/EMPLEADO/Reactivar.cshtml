@model FoodDefence.Models.EMPLEADO

@{
    ViewBag.Title = "Reactivar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="callout callout-primary">

    <h4><i class="fa fa-undo"></i> ¿Esta seguro que desea reactivar este Técnico?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Documento
        </dt>
        <dd>
            <table>
                <tr>
                    <td>@Html.DisplayFor(model => model.DOCUMENTO_TIPO.descripcion)</td>
                    <td>@Html.DisplayFor(model => model.numeroDocumento)</td>
                </tr>
            </table>
        </dd>

        <dt>
            Apellido y Nombre
        </dt>
        <dd>
            @Html.DisplayFor(model => model.apellido) &nbsp;
            @Html.DisplayFor(model => model.nombre)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2>&emsp;</h2>
        <div class="form-actions no-color">
            <input type="submit" value="Reactivar" class="btn btn-outline-success" />
            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-outline-primary" })
        </div>
    }
</div>

