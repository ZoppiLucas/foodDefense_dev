@model FoodDefence.Models.CLIENTE

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="callout callout-primary">

    <h4><i class="fa fa-trash"></i> ¿Esta seguro de eliminar este cliente?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Documento
        </dt>
        <dd>
            <table>
                <tr>
                    <td>@Html.DisplayFor(model => model.DOCUMENTO_TIPO.descripcion)</td>
                    <td>@Html.DisplayFor(model => model.numeroDocumento)</td>
                </tr>
            </table>
        </dd>

        <dt>
            Razón Social
        </dt>
        <dd>
            @Html.DisplayFor(model => model.razonSocial)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2>&emsp;</h2>
        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-outline-primary" })
        </div>
    }
</div>
