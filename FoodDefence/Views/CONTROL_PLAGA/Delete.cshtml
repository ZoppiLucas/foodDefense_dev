@model FoodDefence.Models.CONTROL_PLAGA

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="callout callout-primary">
    <h4><i class="fa fa-trash"></i> ¿Esta seguro de eliminar esta Tarea de Control?</h4>
    <hr />

    <div>
        <dl class="dl-horizontal">
            <dt>Cliente</dt>
            <dd>@Html.Raw(ViewBag.cliente)</dd>

            <dt>Locacion</dt>
            <dd>@Html.DisplayFor(model => model.CLIENTE_LOCACION.descripcion)</dd>

            <dt>Tipo de Trampa</dt>
            <dd>@Html.DisplayFor(model => model.TRAMPA_TIPO.descripcion)</dd>

            <dt>Campo de Condición</dt>
            <dd>@Html.DisplayFor(model => model.campoCondicion)</dd>

            <dt>Operado de Condición</dt>
            @if (ViewBag.verEstado == "S")
            {
                <dd>@Html.Raw(ViewBag.estado)</dd>
            }
            else
            {
                <dd>@Html.DisplayFor(model => model.operadorCondicion)</dd>
            }

            <dt>Valor de Condición</dt>
            <dd> @Html.DisplayFor(model => model.valorCondicion)</dd>

        </dl>

        <div>
            <table class="table table-bordered table-sm">
                <tr> <th class="priority-1"> Tareas </th> </tr>

                @foreach (var item in ViewBag.tareasDetalles)
                {
                    <tr>
                        <td class="priority-1">
                            @item.descripcion
                        </td>
                    </tr>
                }
            </table>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
                @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-outline-primary" })
            </div>
        }
    </div>
</div>
